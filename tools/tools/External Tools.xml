<toolSet name="External Tools">
  <tool name="Clean" showInMainMenu="true" showInProject="true" useConsole="true">
    <exec>
      <option name="COMMAND" value="./remote_exec.sh" />
      <option name="PARAMETERS" value="kill_zombies.sh clean.sh" />
      <option name="WORKING_DIRECTORY" value="$ProjectFileDir$/.idea/hhTools" />
    </exec>
  </tool>
  <tool name="Watch" showInMainMenu="true" showInProject="true" useConsole="true" synchronizeAfterRun="true">
    <exec>
      <option name="COMMAND" value="./remote_exec.sh" />
      <option name="PARAMETERS" value="watch.sh" />
      <option name="WORKING_DIRECTORY" value="$ProjectFileDir$/.idea/hhTools" />
    </exec>
  </tool>
  <tool name="Rebuild from scratch" showInMainMenu="true" showInProject="true" useConsole="true">
    <exec>
      <option name="COMMAND" value="./remote_exec.sh" />
      <option name="PARAMETERS" value="kill_zombies.sh clean.sh build.sh" />
      <option name="WORKING_DIRECTORY" value="$ProjectFileDir$/.idea/hhTools" />
    </exec>
  </tool>
  <tool name="Kill zombie scripts" showInMainMenu="true" showInProject="true" useConsole="true">
    <exec>
      <option name="COMMAND" value="./remote_exec.sh" />
      <option name="PARAMETERS" value="kill_zombies.sh" />
      <option name="WORKING_DIRECTORY" value="$ProjectFileDir$/.idea/hhTools" />
    </exec>
  </tool>
  <tool name="Tail service log" showInMainMenu="true" showInProject="true" useConsole="true">
    <exec>
      <option name="COMMAND" value="./remote_exec.sh" />
      <option name="PARAMETERS" value="log.sh" />
      <option name="WORKING_DIRECTORY" value="$ProjectFileDir$/.idea/hhTools" />
    </exec>
  </tool>
  <tool name="Add translations" showInMainMenu="true" showInProject="true" useConsole="true">
    <exec>
      <option name="COMMAND" value="./create_trl.sh" />
      <option name="PARAMETERS" value="$ProjectFileDir$" />
      <option name="WORKING_DIRECTORY" value="$ProjectFileDir$/.idea/hhTools" />
    </exec>
  </tool>
  <tool name="Update translations" showInMainMenu="true" showInProject="true" useConsole="true">
    <exec>
      <option name="COMMAND" value="./update_trl.sh" />
      <option name="PARAMETERS" value="$ProjectFileDir$" />
      <option name="WORKING_DIRECTORY" value="$ProjectFileDir$/.idea/hhTools" />
    </exec>
  </tool>
</toolSet>
